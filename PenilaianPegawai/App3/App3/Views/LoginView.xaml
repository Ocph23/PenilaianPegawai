<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App3.Views.LoginView">
  <ContentView.Content>
      <StackLayout>
            <StackLayout Orientation="Vertical" Margin="30">
                <Image HeightRequest="200"></Image>
                <Entry Text="{Binding Email}" Placeholder="User Name"></Entry>
                <Entry PropertyChanged="Entry_PropertyChanged" IsPassword="True" Placeholder="Password"></Entry>
                <Button Text="Login" Command="{Binding LoginCommand}"></Button>
            </StackLayout>
      </StackLayout>
  </ContentView.Content>
</ContentView>