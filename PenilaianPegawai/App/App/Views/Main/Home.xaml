<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" Title="Home"
             x:Class="App.Views.Main.Home" BackgroundColor="#091540">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Profile" Command="{Binding ShowProfile}" ></ToolbarItem>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30" ></RowDefinition>
                <RowDefinition Height="50*" ></RowDefinition>
                <RowDefinition Height="20*" ></RowDefinition>
            </Grid.RowDefinitions>
            <StackLayout Grid.Row="0" >
                <Image HeightRequest="100"></Image>
                <Label HorizontalOptions="Center">Nama</Label>
            </StackLayout>

            <StackLayout Grid.Row="1" >
                <Label HorizontalOptions="Center">Selamat Datang</Label>
            </StackLayout>
            <StackLayout Grid.Row="2" >
                <Label HorizontalOptions="Center">APLIKASI</Label>
                <Label HorizontalOptions="Center">PENILAIAN KINERJA PEGAWAI</Label>
                <Label HorizontalOptions="Center">SATKER PSPLP PROVINSI PAPUA</Label>
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>